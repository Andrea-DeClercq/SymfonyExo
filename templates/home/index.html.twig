{% extends 'base.html.twig' %}

{% block title %}Hello HomeController!{% endblock %}

{% block body %}
<section>
    <div class="container">
        <div class="sm-12-col">
            <table class="table table-striped">
                <thead>
                    <td>ID</td>
                    <td>Nom</td>
                    <td>Prénom</td>
                    <td>Téléphone</td>
                    <td>Action</td>
                </thead>
                <tbody>
                    {% for user in listUser %}
                        {% if user.age > 18  %}
                            <tr>
                                <td> {{user.id}}</td>
                                <td>{{ user.name }}</td>
                                <td> {{ user.lastname }}</td>
                                <td> {{ user.phoneNumber }}</td>
                                <td>
                                    <a href="{{path('user_id', {id: user.id}) }}" type="button" class="btn btn-info">Afficher</a>
                                    <a href="{{path('edit_user', {id: user.id}) }}" type="button" class="btn btn-warning">Modifier</a>
                                    <a href="" type="button" class="btn btn-danger">Supprimer</a>
                                </td>
                            </tr>
                        {% endif %}
                    {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
</section>
{% endblock %}
